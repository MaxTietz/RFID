{% extends 'layout.html' %}

{% block rfid_body %}
<script>
$(document).ready(function(){
  $('input[type=radio]').click(function(){
    if (document.querySelector('input[name="user"]:checked').value == "new") {
      $('.existing').addClass("d-none");
      $('.new').removeClass("d-none");
    } else if (document.querySelector('input[name="user"]:checked').value == "existing") {
      $('.new').addClass("d-none");
      $('.existing').removeClass("d-none");
    }
  });
});
</script>

<div class="container-fluid">
    <h1>Administration</h1>

<div class="row justify-content-center">
<div class="col-sm-4 justify-content-center">
      <label class="sr-only" for="inlineFormInputGroup">RFID</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fas fa-tag"></i></div>
        </div>
        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="RFID" disabled>
      </div>
    </div>
</div>
</div>
    <div class="row justify-content-center">
        <div class="col-sm-2">
            <input type="radio" name="user" value="new"> New User
        </div>
        <div class="col-sm-3">
            <input type="radio" onclick=myFunction() name="user" value="existing"> Existing User<br>
            <script>
                function myFunction() {
                    $('view_deatils').hide();
                };
            </script>
            <div class="form-group">
            </div>
        </div>
    </div>
    <div class="row existing justify-content-center">
        <div class="col-sm-1"><i class="fas fa-user"></i></div>
        <div class="col-sm-3">
            <div class="form-group">
                <select class="form-control">
                    <option>Select User</option>
                    <option>Justin Krause</option>
                    <option>Dierk Zehe</option>
                    <option>Max Tietz</option>
                    <option>Daniel Beck</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row new justify-content-center">
        <div class="col-sm-4">
            <div class="form-group">
                <input type="text" class="form-control form-control disabled" placeholder="Name">
                </select>
            </div>
        </div>
    </div>
    <div class="row new justify-content-center">
        <div class="col-sm-4">
            <div class="form-group">
                <input type="text" class="form-control form-control disabled" placeholder="Second name"
                    id="view_details">
            </div>
        </div>
    </div>
<div class="row justify-content-center">
<div class="col-sm-4 justify-content-center">
      <label class="sr-only" for="inlineFormInputGroup">Device Username</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">@</div>
        </div>
        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Device Username">
      </div>
    </div>
</div>
<div class="row justify-content-center">
<div class="col-sm-4 justify-content-center">
      <label class="sr-only" for="inlineFormInputGroup">Device IP Address</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">IP</div>
        </div>
        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Device IP Address">
      </div>
    </div>
</div>
</div>

<div class="row justify-content-center">
<div class="col-sm-4 justify-content-center">
      <label class="sr-only" for="inlineFormInputGroup">Device Password</label>
      <div class="input-group mb-2">
